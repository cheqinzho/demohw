if(workspaceVO.curlanguage=='zh_CN'){
	 document.write("<script src='${ctxStatic}/plugin/bootstrapTable/bootstrap-table-zh-CN.js'><\/script>");
}else{
	 document.write("<script src='${ctxStatic}/plugin/bootstrapTable/bootstrap-table-en-US.js'><\/script>");
}
</script> 
